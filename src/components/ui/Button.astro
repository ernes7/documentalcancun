---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
  type?: 'button' | 'submit' | 'reset';
  disabled?: boolean;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  class: className = '',
  type = 'button',
  disabled = false,
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-medium transition-all duration-300 ease-out rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-background disabled:opacity-50 disabled:cursor-not-allowed';

const variants = {
  primary: 'bg-primary text-text hover:bg-primary-light focus:ring-primary shadow-md hover:shadow-glow',
  secondary: 'bg-secondary text-text hover:bg-secondary-light focus:ring-secondary shadow-md',
  ghost: 'bg-transparent text-text hover:bg-surface focus:ring-primary',
  outline: 'bg-transparent border border-glass-border text-text hover:bg-surface focus:ring-primary',
};

const sizes = {
  sm: 'px-4 py-2 text-small',
  md: 'px-6 py-3 text-body',
  lg: 'px-8 py-4 text-h4',
};

const classes = `${baseStyles} ${variants[variant]} ${sizes[size]} ${className}`;
const Tag = href ? 'a' : 'button';
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes} disabled={disabled}>
    <slot />
  </button>
)}
