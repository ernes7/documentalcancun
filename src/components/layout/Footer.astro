---
import { meta, footer } from '../../data/content';
import Text from '../ui/Text.astro';
---

<div class="section-splash relative py-4 px-4 md:px-6">
  <!-- Paint splash glow - top -->
  <div
    class="absolute -top-20 left-1/2 -translate-x-1/2 w-[80%] h-[150px] blur-[80px] opacity-40 z-0"
    style="background: #E4AC5E;"
  ></div>
  <!-- Paint splash glow - bottom -->
  <div
    class="absolute -bottom-20 left-1/2 -translate-x-1/2 w-[80%] h-[150px] blur-[80px] opacity-40 z-0"
    style="background: #E4AC5E;"
  ></div>
<footer class="bg-surface py-12 md:py-16 rounded-3xl max-w-[1400px] mx-auto relative z-10" style="box-shadow: 0 0 80px -20px #E4AC5E; border: 3px solid #E4AC5E;">
  <div class="container mx-auto px-4 md:px-6 lg:px-8">
    <div class="flex flex-col items-center text-center gap-6">
      <!-- Documentary metadata -->
      <div class="flex flex-wrap justify-center gap-4 md:gap-6">
        <div class="flex items-center gap-2">
          <span class="text-text-muted text-xs uppercase tracking-wider">Duración</span>
          <span class="text-text-secondary text-small font-medium">{meta.duration}</span>
        </div>
        <div class="h-4 w-px bg-glass-border hidden md:block"></div>
        <div class="flex items-center gap-2">
          <span class="text-text-muted text-xs uppercase tracking-wider">País</span>
          <span class="text-text-secondary text-small font-medium">{meta.country}</span>
        </div>
        <div class="h-4 w-px bg-glass-border hidden md:block"></div>
        <div class="flex items-center gap-2">
          <span class="text-text-muted text-xs uppercase tracking-wider">Categoría</span>
          <span class="text-text-secondary text-small font-medium">{meta.category}</span>
        </div>
        <div class="h-4 w-px bg-glass-border hidden md:block"></div>
        <div class="flex items-center gap-2">
          <span class="text-text-muted text-xs uppercase tracking-wider">Género</span>
          <span class="text-text-secondary text-small font-medium">{meta.genre}</span>
        </div>
        <div class="h-4 w-px bg-glass-border hidden md:block"></div>
        <div class="flex items-center gap-2">
          <span class="text-text-muted text-xs uppercase tracking-wider">Tema</span>
          <span class="text-text-secondary text-small font-medium">{meta.theme}</span>
        </div>
      </div>

      <!-- Divider -->
      <div class="w-16 h-px bg-gradient-to-r from-transparent via-primary to-transparent"></div>

      <!-- Copyright -->
      <Text variant="muted" class="text-small">
        {footer.copyright}
      </Text>
    </div>
  </div>
</footer>
</div>
