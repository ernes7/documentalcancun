---
interface Props {
  id?: string;
  variant?: 'default' | 'alt' | 'dark' | 'gradient';
  padding?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
  fullHeight?: boolean;
}

const {
  id,
  variant = 'default',
  padding = 'lg',
  class: className = '',
  fullHeight = false,
} = Astro.props;

const variants = {
  default: 'bg-background',
  alt: 'bg-background-alt',
  dark: 'bg-surface',
  gradient: 'bg-gradient-to-b from-background via-background-alt to-background',
};

const paddings = {
  none: '',
  sm: 'py-8 md:py-12',
  md: 'py-12 md:py-16',
  lg: 'py-16 md:py-24',
  xl: 'py-24 md:py-32',
};

const heightClass = fullHeight ? 'min-h-screen' : '';

const classes = `${variants[variant]} ${paddings[padding]} ${heightClass} ${className}`;
---

<section id={id} class={classes}>
  <div class="container mx-auto px-4 md:px-6 lg:px-8">
    <slot />
  </div>
</section>
