---
interface Props {
  id?: string;
  variant?: 'default' | 'alt' | 'dark' | 'gradient';
  padding?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
  fullHeight?: boolean;
  bgColor?: 'green' | 'blue' | 'red' | 'golden' | 'none';
}

const {
  id,
  variant = 'default',
  padding = 'lg',
  class: className = '',
  fullHeight = false,
  bgColor = 'none',
} = Astro.props;

// Light splash colors
const splashColors = {
  none: '',
  green: '#5AA87A',
  blue: '#6B8DC4',
  red: '#D45A5A',
  golden: '#E4AC5E',
};

const variants = {
  default: 'bg-background',
  alt: 'bg-background-alt',
  dark: 'bg-surface',
  gradient: 'bg-gradient-to-b from-background via-background-alt to-background',
};

const paddings = {
  none: '',
  sm: 'py-8 md:py-12',
  md: 'py-12 md:py-16',
  lg: 'py-16 md:py-24',
  xl: 'py-24 md:py-32',
};

const heightClass = fullHeight ? 'min-h-screen' : '';
const isFloating = bgColor !== 'none';
const splashColor = splashColors[bgColor] || '';
const cardClasses = isFloating
  ? `${variants[variant]} ${paddings[padding]} ${heightClass} ${className} rounded-3xl max-w-[1400px] mx-auto relative z-10`
  : `${variants[variant]} ${paddings[padding]} ${heightClass} ${className}`;
---

{isFloating ? (
  <div class="section-splash relative py-4 px-4 md:px-6">
    <!-- Paint splash glow - top -->
    <div
      class="absolute -top-20 left-1/2 -translate-x-1/2 w-[80%] h-[150px] blur-[80px] opacity-40 z-0"
      style={`background: ${splashColor};`}
    ></div>
    <!-- Paint splash glow - bottom -->
    <div
      class="absolute -bottom-20 left-1/2 -translate-x-1/2 w-[80%] h-[150px] blur-[80px] opacity-40 z-0"
      style={`background: ${splashColor};`}
    ></div>
    <!-- Floating card with colored shadow and border -->
    <section
      id={id}
      class={cardClasses}
      style={`box-shadow: 0 0 80px -20px ${splashColor}; border: 3px solid ${splashColor};`}
    >
      <div class="container mx-auto px-4 md:px-6 lg:px-8">
        <slot />
      </div>
    </section>
  </div>
) : (
  <section id={id} class={cardClasses}>
    <div class="container mx-auto px-4 md:px-6 lg:px-8">
      <slot />
    </div>
  </section>
)}
