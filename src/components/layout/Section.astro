---
interface Props {
  id?: string;
  variant?: 'default' | 'alt' | 'dark' | 'gradient';
  padding?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
  fullHeight?: boolean;
  bgColor?:
    | 'none' | 'white'
    | 'verde-clarito' | 'verde-normal' | 'verde-oscuro'
    | 'azul-clarito' | 'azul-normal' | 'azul-oscuro'
    | 'rojo-clarito' | 'rojo-normal' | 'rojo-oscuro'
    | 'beige-clarito' | 'beige-normal' | 'beige-oscuro';
}

const {
  id,
  variant = 'default',
  padding = 'lg',
  class: className = '',
  fullHeight = false,
  bgColor = 'none',
} = Astro.props;

// Color palette
const bgColors = {
  none: '',
  white: '#FFFFFF',
  // Verde
  'verde-clarito': '#7acba1',
  'verde-normal': '#33845a',
  'verde-oscuro': '#0b592f',
  // Azul
  'azul-clarito': '#8db5e9',
  'azul-normal': '#325a8e',
  'azul-oscuro': '#1b4377',
  // Rojo
  'rojo-clarito': '#fd8d86',
  'rojo-normal': '#b12d28',
  'rojo-oscuro': '#981412',
  // Beige
  'beige-clarito': '#feca77',
  'beige-normal': '#d1861f',
  'beige-oscuro': '#af7018',
};

const variants = {
  default: 'bg-background',
  alt: 'bg-background-alt',
  dark: 'bg-surface',
  gradient: 'bg-gradient-to-b from-background via-background-alt to-background',
};

const paddings = {
  none: '',
  sm: 'py-8 md:py-12',
  md: 'py-12 md:py-16',
  lg: 'py-16 md:py-24',
  xl: 'py-24 md:py-32',
};

const heightClass = fullHeight ? 'min-h-screen' : '';
const hasBgColor = bgColor !== 'none';
const sectionBg = hasBgColor ? '' : variants[variant];
const classes = `${sectionBg} ${paddings[padding]} ${heightClass} ${className}`;
---

<section
  id={id}
  class={classes}
  style={hasBgColor ? `background: ${bgColors[bgColor]};` : ''}
>
  <div class="container mx-auto px-4 md:px-6 lg:px-8">
    <slot />
  </div>
</section>
