---
import { synopsis } from '../../data/content';
import Section from '../layout/Section.astro';
import Heading from '../ui/Heading.astro';
import FadeIn from '../animation/FadeIn.astro';
---

<Section id="synopsis" variant="default" padding="xl">
  <div class="max-w-4xl mx-auto text-center">
    <FadeIn>
      <Heading level={2} size="h2" class="mb-12">
        {synopsis.title}
      </Heading>
    </FadeIn>

    <FadeIn delay={0.2}>
      <div class="synopsis-text relative">
        <!-- Opening quote mark -->
        <span class="absolute -top-8 left-0 md:-left-8 text-8xl text-primary/10 font-serif leading-none select-none">"</span>

        <p class="text-xl md:text-2xl leading-relaxed text-text-secondary font-light">
          {synopsis.text}
        </p>

        <!-- Closing quote mark -->
        <span class="absolute -bottom-16 right-0 md:-right-8 text-8xl text-primary/10 font-serif leading-none select-none">"</span>
      </div>
    </FadeIn>

    <!-- Decorative line -->
    <FadeIn delay={0.4}>
      <div class="mt-16 flex items-center justify-center gap-4">
        <div class="h-px w-16 bg-gradient-to-r from-transparent to-primary/50"></div>
        <div class="w-2 h-2 rounded-full bg-primary"></div>
        <div class="h-px w-16 bg-gradient-to-l from-transparent to-primary/50"></div>
      </div>
    </FadeIn>
  </div>
</Section>
