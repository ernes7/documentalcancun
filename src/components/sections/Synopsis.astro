---
import { synopsis } from '../../data/content';
import Section from '../layout/Section.astro';
import Heading from '../ui/Heading.astro';
import FadeIn from '../animation/FadeIn.astro';
---

<Section id="synopsis" variant="default" padding="xl" bgColor="white">
  <div class="max-w-4xl mx-auto text-center">
    <FadeIn>
      <Heading level={2} size="h2" class="mb-12" style="color: #b12d28;">
        {synopsis.title}
      </Heading>
    </FadeIn>

    <FadeIn delay={0.2}>
      <div class="synopsis-text relative">
        <!-- Opening quote mark -->
        <span class="absolute -top-8 left-0 md:-left-8 text-8xl font-serif leading-none select-none" style="color: rgba(177, 45, 40, 0.15);">"</span>

        <p class="text-xl md:text-2xl leading-relaxed font-light" style="color: #b12d28;">
          {synopsis.text}
        </p>

        <!-- Closing quote mark -->
        <span class="absolute -bottom-16 right-0 md:-right-8 text-8xl font-serif leading-none select-none" style="color: rgba(177, 45, 40, 0.15);">"</span>
      </div>
    </FadeIn>

    <!-- Decorative line -->
    <FadeIn delay={0.4}>
      <div class="mt-16 flex items-center justify-center gap-4">
        <div class="h-px w-16" style="background: linear-gradient(to right, transparent, #b12d28);"></div>
        <div class="w-2 h-2 rounded-full" style="background: #b12d28;"></div>
        <div class="h-px w-16" style="background: linear-gradient(to left, transparent, #b12d28);"></div>
      </div>
    </FadeIn>
  </div>
</Section>
