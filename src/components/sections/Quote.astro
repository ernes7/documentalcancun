---
import { Image } from 'astro:assets';
import { quote } from '../../data/content';
import Parallax from '../animation/Parallax.astro';
import impactImage from '../../assets/sections/impact.jpg';
---

<section id="quote" class="quote-section vignette relative py-32 md:py-48 overflow-hidden">
  <!-- Background image with parallax -->
  <Parallax speed={0.15} class="absolute inset-0 z-0">
    <div class="w-full h-[120%] bg-surface">
      <Image
        src={impactImage}
        alt="FotografÃ­a de impacto - zonas marginadas"
        width={1920}
        height={1080}
        quality={95}
        format="webp"
        class="absolute inset-0 w-full h-full object-cover"
        loading="lazy"
      />
    </div>
  </Parallax>

  <!-- Dark overlay -->
  <div class="absolute inset-0 bg-background/80 z-10"></div>

  <!-- Content -->
  <div class="relative z-20 container mx-auto px-4 md:px-6 lg:px-8">
    <blockquote class="max-w-5xl mx-auto text-center">
      <p
        class="quote-text text-2xl md:text-4xl lg:text-5xl font-light leading-tight"
        style="color: #feca77;"
        data-text-reveal
      >
        {quote.text}
      </p>
    </blockquote>
  </div>

  <!-- Decorative elements -->
  <div class="quote-glow absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full bg-primary/20 blur-3xl z-0"></div>
</section>

<script>
  import { gsap, ScrollTrigger } from '../../scripts/gsap';

  function initQuote() {
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    // Character-by-character text reveal (word-aware to prevent breaking)
    const quoteText = document.querySelector('[data-text-reveal]') as HTMLElement;
    if (quoteText && !quoteText.hasAttribute('data-initialized')) {
      quoteText.setAttribute('data-initialized', 'true');
      const text = quoteText.textContent || '';
      quoteText.innerHTML = '';

      // Split into words first, then characters within each word
      const words = text.split(' ');
      words.forEach((word, wordIndex) => {
        // Create a word wrapper to prevent breaking
        const wordWrapper = document.createElement('span');
        wordWrapper.style.whiteSpace = 'nowrap';
        wordWrapper.style.display = 'inline-block';

        // Split word into characters
        word.split('').forEach(char => {
          const span = document.createElement('span');
          span.textContent = char;
          span.style.display = 'inline-block';
          if (!prefersReducedMotion) {
            span.style.opacity = '0';
          }
          wordWrapper.appendChild(span);
        });

        quoteText.appendChild(wordWrapper);

        // Add space between words (except after last word)
        if (wordIndex < words.length - 1) {
          const space = document.createElement('span');
          space.innerHTML = '&nbsp;';
          space.style.display = 'inline-block';
          if (!prefersReducedMotion) {
            space.style.opacity = '0';
          }
          quoteText.appendChild(space);
        }
      });

      // Animate on scroll (unless reduced motion)
      if (!prefersReducedMotion) {
        // Get all character spans (inside word wrappers and spaces)
        const allChars = quoteText.querySelectorAll('span span, span:not(:has(span))');
        gsap.to(allChars, {
          opacity: 1,
          duration: 0.03,
          stagger: 0.03,
          ease: 'none',
          scrollTrigger: {
            trigger: quoteText,
            start: 'top 75%',
            toggleActions: 'play none none none',
          },
        });
      }
    }

    if (prefersReducedMotion) return;

    // Subtle glow pulse (slower for documentary feel)
    gsap.to('.quote-glow', {
      scale: 1.05,
      opacity: 0.7,
      duration: 8,
      repeat: -1,
      yoyo: true,
      ease: 'sine.inOut',
    });
  }

  initQuote();
  document.addEventListener('astro:page-load', initQuote);
</script>
