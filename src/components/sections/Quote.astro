---
import { quote } from '../../data/content';
import Parallax from '../animation/Parallax.astro';
---

<section id="quote" class="quote-section vignette relative py-32 md:py-48 overflow-hidden">
  <!-- Background image placeholder with parallax -->
  <Parallax speed={0.15} class="absolute inset-0 z-0">
    <div class="w-full h-[120%] bg-surface">
      <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-secondary/5"></div>
      <!-- Placeholder for impact photo -->
      <div class="absolute inset-0 flex items-center justify-center opacity-20">
        <svg class="w-32 h-32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="0.5" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
      </div>
    </div>
  </Parallax>

  <!-- Dark overlay -->
  <div class="absolute inset-0 bg-background/80 z-10"></div>

  <!-- Content -->
  <div class="relative z-20 container mx-auto px-4 md:px-6 lg:px-8">
    <blockquote class="max-w-5xl mx-auto text-center">
      <p
        class="quote-text text-2xl md:text-4xl lg:text-5xl font-light leading-tight text-text"
        data-text-reveal
      >
        {quote.text}
      </p>
    </blockquote>
  </div>

  <!-- Decorative elements -->
  <div class="quote-glow absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full bg-primary/5 blur-3xl z-0"></div>
</section>

<script>
  import { gsap, ScrollTrigger } from '../../scripts/gsap';

  function initQuote() {
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

    // Character-by-character text reveal
    const quoteText = document.querySelector('[data-text-reveal]') as HTMLElement;
    if (quoteText && !quoteText.hasAttribute('data-initialized')) {
      quoteText.setAttribute('data-initialized', 'true');
      const text = quoteText.textContent || '';
      quoteText.innerHTML = '';

      // Split into characters with spans
      text.split('').forEach(char => {
        const span = document.createElement('span');
        span.textContent = char === ' ' ? '\u00A0' : char;
        span.style.display = 'inline-block';
        if (!prefersReducedMotion) {
          span.style.opacity = '0';
        }
        quoteText.appendChild(span);
      });

      // Animate on scroll (unless reduced motion)
      if (!prefersReducedMotion) {
        gsap.to(quoteText.children, {
          opacity: 1,
          duration: 0.03,
          stagger: 0.04,
          ease: 'none',
          scrollTrigger: {
            trigger: quoteText,
            start: 'top 75%',
            toggleActions: 'play none none none',
          },
        });
      }
    }

    if (prefersReducedMotion) return;

    // Subtle glow pulse (slower for documentary feel)
    gsap.to('.quote-glow', {
      scale: 1.05,
      opacity: 0.7,
      duration: 8,
      repeat: -1,
      yoyo: true,
      ease: 'sine.inOut',
    });
  }

  initQuote();
  document.addEventListener('astro:page-load', initQuote);
</script>
